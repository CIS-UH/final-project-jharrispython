<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Investors Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Manage Investors</h1>


        <div class="card my-4">
            <div class="card-body">
                <h5 class="card-title">Add New Investor</h5>
                <form action="/investor" method="POST">
                    <div class="mb-3">
                        <label for="firstname" class="form-label">First Name</label>
                        <input type="text" name="firstname" id="firstname" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="lastname" class="form-label">Last Name</label>
                        <input type="text" name="lastname" id="lastname" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Investor</button>
                </form>
            </div>
        </div>

        <h2>Investor List</h2>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (investors && investors.length > 0) { %>
                    <% investors.forEach(investor => { %>
                        <tr>
                            <td><%= investor.id %></td>
                            <td><%= investor.firstname %></td>
                            <td><%= investor.lastname %></td>
                            <td>

                                <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#updateModal<%= investor.id %>">Edit</button>


                                <form action="/investor/<%= investor.id %>" method="POST" style="display:inline;">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>


                        <div class="modal fade" id="updateModal<%= investor.id %>" tabindex="-1" aria-labelledby="updateModalLabel<%= investor.id %>" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="updateModalLabel<%= investor.id %>">Edit Investor</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <form action="/investor/<%= investor.id %>" method="POST">
                                        <input type="hidden" name="_method" value="PUT">
                                        <div class="modal-body">
                                            <div class="mb-3">
                                                <label for="firstname<%= investor.id %>" class="form-label">First Name</label>
                                                <input type="text" name="firstname" id="firstname<%= investor.id %>" class="form-control" value="<%= investor.firstname %>" required>
                                            </div>
                                            <div class="mb-3">
                                                <label for="lastname<%= investor.id %>" class="form-label">Last Name</label>
                                                <input type="text" name="lastname" id="lastname<%= investor.id %>" class="form-control" value="<%= investor.lastname %>" required>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-primary">Save Changes</button>
                                        </div>
                                    </form>                   
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="4" class="text-center">No investors found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
