<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Investors</title>
</head>
<body>
    <h1>Investors List</h1>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% investors.forEach((investor) => { %>
                <tr>
                    <td><%= investor.id %></td>
                    <td><%= investor.firstname %></td>
                    <td><%= investor.lastname %></td>
                    <td>
                        <!-- Inline edit form -->
                        <form action="/investor/<%= investor.id %>?_method=PUT" method="POST">
                            <input type="text" name="firstname" value="<%= investor.firstname %>" required>
                            <input type="text" name="lastname" value="<%= investor.lastname %>" required>
                            <button type="submit">Update</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
