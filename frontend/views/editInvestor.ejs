<form action="/investor/<%= investor.id %>?_method=PUT" method="POST">
    <div>
        <label for="firstname">First Name:</label>
        <input type="text" name="firstname" value="<%= investor.firstname %>" required>
    </div>
    <div>
        <label for="lastname">Last Name:</label>
        <input type="text" name="lastname" value="<%= investor.lastname %>" required>
    </div>
    <button type="submit">Save Changes</button>
</form>